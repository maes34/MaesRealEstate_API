@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Listesi</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">Durum</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.CategoryID</th>
                        <td>@item.CategoryName</td>
                        <td>@if (item.CategoryStatus == true)
                                        {
                                            <span>Aktif</span>
                                        }
                                        else
                                        {
                                            <span>Pasif</span>
                                        }
                            
                        </td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a> <a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    </tr>
                            }
                </tbody>
                <a href="/Category/CreateCategory" class="btn btn-outline-success float-right">Yeni Kategori</a>
            </table>
        </div>
    </div>
</div>
</div>
</div>

